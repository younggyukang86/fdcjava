<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="org/springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org/springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org/springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(:%d{${LOG_DATEFORMAT_PATTERN:yyyy-MM-dd HH:mm:ss.SSS}}) {faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }) {magenta} %clr(---){faint} %clr(%-40.40logger{36} .%M\\)){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}" />
    <property name="FILE_LOG_PATTERN" value="${FILE_LOG_PATTERN:-%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- %-40.40logger{36} .%M\\(%line\\) : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}" />

    <logger name="org.apache.catalina.startup.DigesterFactory" value="ERROR" />
    <logger name="org.apache.catalina.util.LifecycleBase" value="ERROR" />
    <logger name="org.apache.coyote.http11.Http11NioProtocol" value="WARN" />
    <logger name="org.apache.sshd.common.util.SecurityUtils" value="WARN" />
    <logger name="org.apache.tomcat.util.net.NioSelectorPool" value="WARN" />
    <logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" value="ERROR" />
    <logger name="org.hibernate.validator.internal.util.version" value="WARN" />
    <logger name="org.hibernate.id" value="INFO" />
    <logger name="org.mybatis.spring" value="INFO" />
    <logger name="org.springframework" value="INFO" />
    <logger name="org.apache.http" value="INFO" />
    <logger name="com.zaxxer" value="WARN" />

    <logger name="jdbc.resultsettable" value="INFO" />
    <logger name="jdbc.sqlonly" value="WARN" />
    <logger name="jdbc.sqltiming" value="INFO" />
    <logger name="jdbc.resultset" value="WARN" />
    <logger name="jdbc.audit" value="WARN" />
    <logger name="jdbc.connection" value="WARN" />

    <logger name="com.samsung" value="DEBUG" />

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <file>target/hbase-data-loader-logging.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattenr>target/hbase-data-loader-logging.%d{yyyy-MM-dd}.%i.gz</fileNamePattenr>
            <maxFileSize>${LOG_FILE_MAX-SIZE:-100MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-0}</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="app.exception" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <file>target/hbase-data-loader-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolic">
            <fileNamePattenr>target/hbase-data-loader-error.%d{yyyy-MM-dd}.%i.gz</fileNamePattenr>
            <maxFileSize>${LOG_FILE_MAX-SIZE:-100MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-0}</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="app.async.exception" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <file>target/hbase-data-loader-async-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolic">
            <fileNamePattenr>target/hbase-data-loader-async-error.%d{yyyy-MM-dd}.%i.gz</fileNamePattenr>
            <maxFileSize>${LOG_FILE_MAX-SIZE:-100MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-0}</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="app.exception" level="WARN" />
    <logger name="app.async.exception" level="WARN" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>